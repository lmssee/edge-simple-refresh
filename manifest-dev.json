{
  "manifest_version": 3,
  "name": "__MSG_name__",
  "short_name": "__MSG_short_name__",
  "version": "0.0.2",
  "description": "__MSG_description__",
  "icons": {
    "16": "./icons/simple-refresh@16x16.png",
    "32": "./icons/simple-refresh@32x32.png",
    "48": "./icons/simple-refresh@48x48.png",
    "128": "./icons/simple-refresh@128x128.png"
  },
  "action": {
    "default_popup": "./popup/index.html",
    "default_icon": {
      "16": "./icons/simple-refresh@16x16.png",
      "32": "./icons/simple-refresh@32x32.png",
      "48": "./icons/simple-refresh@48x48.png",
      "128": "./icons/simple-refresh@128x128.png"
    },
    "default_title": "__MSG_name__"
  },
  "devtools_page": "dev/index.html",
  "author": "lmssee",
  "homepage_url": "https://lmssee.com/simple-refresh",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "http://*/*",
        "file://*/*",
        "https://*/*"
      ],
      "js": [
        "./content/index.js",
        "./content/development.js"
      ]
    }
  ],
  "background": {
    "service_worker": "./background/index.js"
  },
  "default_locale": "en",
  "update_url": "https://edge.microsoft.com/extensionwebstorebase/v1/crx",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ]
}